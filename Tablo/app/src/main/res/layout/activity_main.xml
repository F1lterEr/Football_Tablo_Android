<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/barcelona"
        android:layout_width="100dp"
        android:layout_height="67dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="52dp"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Juventus"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="12dp"
        android:text="@string/juventusButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juventus" />

    <Button
        android:id="@+id/Barcelona"
        android:layout_width="128dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="34dp"
        android:text="@string/barcelonaButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcelona" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="162dp"
        android:text="@string/reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset" />

    <TextView
        android:id="@+id/juventus"
        android:layout_width="100dp"
        android:layout_height="67dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="52dp"
        android:layout_marginTop="404dp"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="393dp"
        android:layout_marginEnd="85dp"
        android:text=":"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/barcelona"
        app:layout_constraintStart_toEndOf="@+id/juventus"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="139dp"
        android:layout_height="174dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="219dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/juventus" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="163dp"
        android:layout_height="172dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/barcelona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>